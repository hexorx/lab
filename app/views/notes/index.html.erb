<h1>Listing notes</h1>

<table>
  <tr>
    <th>From user</th>
    <th>To user</th>
    <th>Level</th>
    <th>Subject</th>
    <th>Body</th>
    <th>Notable type</th>
    <th>Notable</th>
  </tr>

<% for note in @notes %>
  <tr>
    <td><%=h note.from_user_id %></td>
    <td><%=h note.to_user_id %></td>
    <td><%=h note.level %></td>
    <td><%=h note.subject %></td>
    <td><%=h note.body %></td>
    <td><%=h note.notable_type %></td>
    <td><%=h note.notable_id %></td>
    <td><%= link_to 'Show', user_note_path(@user) %></td>
    <td><%= link_to 'Edit', edit_user_note_path(@user, note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_user_note_path(@user) %>
